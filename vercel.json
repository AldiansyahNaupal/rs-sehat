{
  "version": 2,
  "framework": null,
  "functions": {
    "api/index.php": { 
      "runtime": "vercel-php@0.6.2",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/build/assets/(.*)",
      "dest": "/public/build/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/api/index.php"
    }
  ],
  "outputDirectory": "public",
  "builds": [
    { 
      "src": "api/index.php",
      "use": "@vercel/php",
      "config": {
        "composerInstall": true
      }
    },
    { 
      "src": "public/**", 
      "use": "@vercel/static" 
    }
  ],
  "buildCommand": "php artisan config:cache && php artisan route:cache && php artisan view:cache && npm install && npm run build",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://your-app.vercel.app",
    "DB_CONNECTION": "sqlite",
    "DB_DATABASE": "/tmp/database.sqlite"
  }
}
