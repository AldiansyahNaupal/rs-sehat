{
  "version": 2,
  "framework": null,
  "functions": {
    "api/index.php": { 
      "runtime": "vercel-php@0.6.2"
    }
  },
  "routes": [
    {
      "src": "/build/assets/(.*)",
      "dest": "/public/build/assets/$1"
    },
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/api/index.php"
    }
  ],
  "outputDirectory": "public",
  "builds": [
    { "src": "api/index.php", "use": "@vercel/php" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://your-app.vercel.app",
    "DB_CONNECTION": "sqlite",
    "DB_DATABASE": "/tmp/database.sqlite"
  }
}
